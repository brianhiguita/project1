        <div class="form-group">
          <input class="form-control" type="text" name="image" placeholder="image_url">
        </div>
        <div class="form-group">
          <button class="btn btn-large btn-default btn-block btn-primary" type="submit" name="submit">submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>

  </div>
</div>
